Project: Number Guessing Game
import random

def play_game():
    secret_number = random.randint(1, 100)
    attempts = 0

    print("üéØ Welcome to Number Guessing Game")
    print("‡∏ú‡∏°‡∏™‡∏∏‡πà‡∏°‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏Ç‡πÑ‡∏ß‡πâ‡πÅ‡∏•‡πâ‡∏ß‡∏£‡∏∞‡∏´‡∏ß‡πà‡∏≤‡∏á 1 - 100")
    print("‡∏•‡∏≠‡∏á‡∏ó‡∏≤‡∏¢‡∏î‡∏π‡∏ß‡πà‡∏≤‡∏Ñ‡∏∑‡∏≠‡πÄ‡∏•‡∏Ç‡∏≠‡∏∞‡πÑ‡∏£!\n")

    while True:
        try:
            guess = int(input("‡∏ó‡∏≤‡∏¢‡πÄ‡∏•‡∏Ç‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì: "))
            attempts += 1

            if guess < secret_number:
                print("‡∏ô‡πâ‡∏≠‡∏¢‡πÑ‡∏õ ‚¨áÔ∏è ‡∏•‡∏≠‡∏á‡πÉ‡∏´‡∏°‡πà")
            elif guess > secret_number:
                print("‡∏°‡∏≤‡∏Å‡πÑ‡∏õ ‚¨ÜÔ∏è ‡∏•‡∏≠‡∏á‡πÉ‡∏´‡∏°‡πà")
            else:
                print(f"‚úÖ ‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á! ‡∏Ñ‡∏∏‡∏ì‡πÉ‡∏ä‡πâ‡πÑ‡∏õ {attempts} ‡∏Ñ‡∏£‡∏±‡πâ‡∏á")
                break
        except ValueError:
            print("‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÉ‡∏™‡πà‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏Ç‡πÄ‡∏ó‡πà‡∏≤‡∏ô‡∏±‡πâ‡∏ô")


def main():
    while True:
        play_game()
        again = input("\n‡∏≠‡∏¢‡∏≤‡∏Å‡πÄ‡∏•‡πà‡∏ô‡∏≠‡∏µ‡∏Å‡πÑ‡∏´‡∏°? (y/n): ").lower()
        if again != 'y':
            print("‡∏Ç‡∏≠‡∏ö‡∏Ñ‡∏∏‡∏ì‡∏ó‡∏µ‡πà‡πÄ‡∏•‡πà‡∏ô‡πÄ‡∏Å‡∏° üëã")
            break


if __name__ == "__main__":
    main()

